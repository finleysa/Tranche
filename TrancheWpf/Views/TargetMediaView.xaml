<UserControl x:Class="TrancheWpf.Views.TargetMediaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrancheWpf.Views"
             xmlns:vml="clr-namespace:TrancheWpf.VML"
             xmlns:data="clr-namespace:TrancheWpf.Models"
             mc:Ignorable="d" 
             vml:ViewModelLocator.AutoHookedUpViewModel = "True" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <UserControl.Resources>
        <DataTemplate DataType = "{x:Type data:TargetMedia}">

            <TextBlock Height="Auto" Width="Auto" Text = "{Binding Path = content, Mode = OneWay}" TextWrapping="WrapWithOverflow" 
                Margin = "0 5 3 5" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>

        </DataTemplate>
    </UserControl.Resources>

    <Grid Height="Auto" Width="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
        <ListBox ItemsSource="{Binding DisplayedMediaData, Mode = OneWay}"
                 SelectedItem="{Binding SelectedMedia}"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </Grid>
</UserControl>
