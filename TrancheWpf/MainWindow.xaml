<Window x:Class="TrancheWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrancheWpf"
        xmlns:views="clr-namespace:TrancheWpf.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="600">
    
    <Grid Width="600" Height="480">
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open"/>
                    <MenuItem Header="_Close"/>
                    <MenuItem Header="_Save"/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>
        <views:TargetsView x:Name = "TargetsViewControl" Margin="0,0,214,0" HorizontalAlignment="Left"/>
    </Grid>
</Window>
